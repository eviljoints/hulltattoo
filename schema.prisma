datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Review {
  id        Int      @id @default(autoincrement())
  name      String
  rating    Int
  comment   String
  createdAt DateTime @default(now())
  status    String   @default("pending") // "pending", "approved", "rejected"
}

model Client {
  id         Int       @id @default(autoincrement())
  name       String
  hours      Int       @default(0)
  stamps     Int       @default(0)
  clientId   String    @unique
  email      String?   @unique
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  signUpDate DateTime  @default(now())
  googleId   String?   @unique  // <-- new field for Google OAuth
  appleId    String?   @unique  // <-- new field for Apple OAuth
}

model File {
  id        Int      @id @default(autoincrement())
  name      String
  mimetype  String
  content   String
  createdAt DateTime @default(now())
}
model PostView {
  id        Int      @id @default(autoincrement())
  slug      String   @unique
  views     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

